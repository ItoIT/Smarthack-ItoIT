{% extends "layout.jinja" %}

{% block links %}
    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" href="static/css/style.css">
    <link rel="stylesheet" href="static/css/aos.css">
    <link rel="stylesheet" href="static/css/alegebanca.css">
    <link rel="stylesheet" href="static/fonts/google/Muli.css">
    <link rel="stylesheet" href="static/css/owl.carousel.min.css">
    <link rel="stylesheet" href="static/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="static/fonts/flaticon/font/flaticon.css">
{% endblock %}

{% block content %}
    <div class="intro-section">
        <div class="slide-1" data-stellar-background-ratio="1"
            style="background: linear-gradient(rgba(52, 58, 64, 0.6), rgba(52, 58, 64, 0.6)), url('static/images/wooden-plank5.jpg');
                   background-size: cover;
                   background-position: center;
                   background-repeat: no-repeat;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="row align-items-center">
                            <div class="col-lg-12 mb-1 mt-4 banks-content">
                                <div class="text2 ">
                                    <div class = "h2">Alege banca la care vrei sa deschizi capitalul social al firmei</div>
                                    <div class ="banks" id="banks">
                                        <div class="boxes" id="boxes">
                                            
                                        </div> 
                                    </div>
                                    <div class = "h2">Documentele de completat pentru banca aleasa: </div>
                                    <div class="documents" id="documents">
                                        <a class= "download-button btn btn-primary" id = "download-button"> Downloadeaza actele </a>
                                        <div>
                                        <label for="avatar"  class ="h2 mr-2 mt-5" >Incarca actele completate:</label>
                                        <input type="file" id="completatebanca" name="completatebanca" accept="image/*,.pdf">
                                        </div>
                                        <button type="submit" class = "btn btn-primary mt-4">Salveaza</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}

{% block scripts %}
    <script src="{{ url_for('static', filename='js/popper.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/index.js') }}"></script>
    <script type ="module" src="{{ url_for('static', filename='js/alegebanca.mjs') }}"></script>
{% endblock scripts %}