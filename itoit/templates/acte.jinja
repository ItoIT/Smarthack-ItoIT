{% extends "layout.jinja" %}

{% block links %}
    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" href="static/css/style.css">
    <link rel="stylesheet" href="static/css/aos.css">
    <link rel="stylesheet" href="static/css/acte.css">
    <link rel="stylesheet" href="static/fonts/google/Muli.css">
    <link rel="stylesheet" href="static/css/owl.carousel.min.css">
    <link rel="stylesheet" href="static/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="static/fonts/flaticon/font/flaticon.css">
{% endblock %}

{% block content %}
    <div class="intro-section">
        <div class="slide-1" data-stellar-background-ratio="1"
            style="background: linear-gradient(rgba(52, 58, 64, 0.6), rgba(52, 58, 64, 0.6)), url('static/images/wooden-plank5.jpg');
                   background-size: cover;
                   background-position: center;
                   background-repeat: no-repeat;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="row align-items-center">
                            <div class="col-lg-12 mb-1 mt-4 steps-content">
                                <div class="text2 ">
                                    <div class = "h2">Aici ai toti pasii care trebuiesc urmati pentru a-ti deschide firma</div>
                                    <div class = "steps"> 
                                        <div class="step"> <a href="/alegebanca" class="step-a" id="/alegebanca"> 1. Alege-ti banca si completeaza documentele</a> <i class="fas fa-check fa-2x"></i> <i class="fas fa-times fa-2x"></i></div>
                                        <div class ="step"><a href="/capitalbanca" class="step-a" id="/capitalbanca">2. Adauga capitalul social.</a><i class="fas fa-check fa-2x"></i> <i class="fas fa-times fa-2x"></i></div>
                                        <div class="step"> <a href="/registru" class="step-a" id="/registru">3. Acte registrul comertului</a><i class="fas fa-check fa-2x"></i> <i class="fas fa-times fa-2x"></i></div>                      
                                        <div class="acte-firma" id="#firm-completed"><a>Firma a fost creata cu succes! Descarca documentele firmei aici. </a></div>
                                    </div>
                                </div>
                            </div>
                        </div>  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}

{% block scripts %}
    <script src="{{ url_for('static', filename='js/popper.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/index.js') }}"></script>
    <script type="module" src="{{ url_for('static', filename='js/acte.mjs') }}"></script>
{% endblock scripts %}