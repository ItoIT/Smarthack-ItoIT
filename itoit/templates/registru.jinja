{% extends "layout.jinja" %}

{% block links %}
    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" href="static/css/style.css">
    <link rel="stylesheet" href="static/css/aos.css">
    <link rel="stylesheet" href="static/css/registru.css">
    <link rel="stylesheet" href="static/fonts/google/Muli.css">
    <link rel="stylesheet" href="static/css/owl.carousel.min.css">
    <link rel="stylesheet" href="static/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="static/fonts/flaticon/font/flaticon.css">
{% endblock %}

{% block content %}
    <div class="intro-section">
        <div class="slide-1" data-stellar-background-ratio="1"
            style="background: linear-gradient(rgba(52, 58, 64, 0.6), rgba(52, 58, 64, 0.6)), url('static/images/wooden-plank5.jpg');
                   background-size: cover;
                   background-position: center;
                   background-repeat: no-repeat;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-8">
                        <div class="row align-items-center">
                            <div class="mb-1 mt-4 form-box"> 
                                <form method = "post" enctype="multipart/form-data">
                                    <div class="judet-select">
                                        <select class="form-control mt-3 w-50" id="onrc-select" name="judete"> 
                                            <option value="0">Alege registrul comertului</option>
                                            
                                        </select>   
                                    </div>
                                    <a class= "download-button btn btn-primary mt-3" id = "download-button" target="_blank"> Downloadeaza actele </a>
                                    
                                    <div>
                                        <label for="avatar"  class ="h2 mt-5"> Incarca documentele completate:</label>
                                        <input class ="mt-3" type="file" id="completatebanca" name="completatebanca" accept="image/*,.pdf">
                                    </div>
                                    <button type="submit" class = "btn btn-primary mt-5">Salveaza</button>
                                </form>
                            </div>
                        </div>  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}

{% block scripts %}
    <script src="{{ url_for('static', filename='js/popper.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/index.js') }}"></script>
    <script type ="module" src="{{ url_for('static', filename='js/registru.mjs') }}"></script>
{% endblock scripts %}