{% extends "layout.jinja" %}

{% block links %}
    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" href="static/css/style.css">
    <link rel="stylesheet" href="static/css/aos.css">
    <link rel="stylesheet" href="static/css/alegebanca.css">
    <link rel="stylesheet" href="static/fonts/google/Muli.css">
    <link rel="stylesheet" href="static/css/owl.carousel.min.css">
    <link rel="stylesheet" href="static/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="static/fonts/flaticon/font/flaticon.css">
{% endblock %}

{% block content %}
    <div class="intro-section">
        <div class="slide-1" data-stellar-background-ratio="1"
            style="background: linear-gradient(rgba(52, 58, 64, 0.6), rgba(52, 58, 64, 0.6)), url('static/images/wooden-plank5.jpg');
                   background-size: cover;
                   background-position: center;
                   background-repeat: no-repeat;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="row align-items-center">
                            <div class="col-lg-12 mb-1 mt-4">
                                <div class="text2 ">
                                    <form class ="form-box"> 
                                        <label for="uname"><b>Email</b></label>
                                        <input type="text" placeholder="Email" name="uname" required>

                                        <label for="psw"><b>Parola</b></label>
                                        <input type="password" placeholder="Parola" name="psw" required>

                                         <label for="psw"><b>Nume banca</b></label>
                                        <input type="text" placeholder="Nume banca" name="name" required>
                                        
                                        <label for="avatar">Documente pentru deschidere cont firma:</label>
                                        <input type="file" id="avatar" name="avatar" accept="image/*,.pdf">

                                        <button type="submit">Login</button>
                                    </form>

                                    
                                </div>
                            </div>
                        </div>  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}

{% block scripts %}
    <script src="{{ url_for('static', filename='js/popper.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/index.js') }}"></script>
    <script src="{{ url_for('static', filename='js/alegebanca.js') }}"></script>
{% endblock scripts %}