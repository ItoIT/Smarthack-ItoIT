{% extends "layout.jinja" %}

{% block links %}
    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" href="static/css/style.css">
    <link rel="stylesheet" href="static/css/aos.css">
    <link rel="stylesheet" href="static/css/actebanca.css">
    <link rel="stylesheet" href="static/fonts/google/Muli.css">
    <link rel="stylesheet" href="static/css/owl.carousel.min.css">
    <link rel="stylesheet" href="static/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="static/fonts/flaticon/font/flaticon.css">
{% endblock %}

{% block content %}
    <div class="intro-section">
        <div class="slide-1" data-stellar-background-ratio="1"
            style="background: linear-gradient(90deg, rgba(28,23,103,1) 0%, rgba(9,9,121,0.4654236694677871) 74%, rgba(0,212,255,0) 100%);
                   background-size: cover;
                   background-position: center;
                   background-repeat: no-repeat;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="row align-items-center">
                            <div class="offset-3 col-lg-6 mb-1 mt-10 mb-10 banks-content" data-aos="fade-up">
                                <div class="text2" id ="firms-container">
                                    <div class="container-spinner">
                                        <div class="spinner-border spinner-border-sm mt-4" role="status" aria-hidden="true"></div>
                                        <h2 class="mt-4 mb-4">Se cauta firmele...</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}

{% block scripts %}
    <script src="{{ url_for('static', filename='js/popper.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/index.js') }}"></script>
    <script type ="module" src="{{ url_for('static', filename='js/actebanca.mjs') }}"></script>
{% endblock scripts %}